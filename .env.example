# ====== Database Configuration ======
# Format: postgresql://username:password@hostname:port/database
# Replace with your actual PostgreSQL credentials
DATABASE_URL=postgresql://postgres:password@localhost:5432/agrobuizz

# PostgreSQL Individual Connection Parameters
# These are optional if DATABASE_URL is properly configured
# They're used as fallback or by certain database tools
PGUSER=postgres
PGPASSWORD=password
PGHOST=localhost
PGPORT=5432
PGDATABASE=agrobuizz

# ====== Security Configuration ======
# Generate a strong random string for session security
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change_this_to_a_random_string_for_security

# ====== Server Configuration ======
# The port the application will run on
PORT=5000

# Application environment (development, production, test)
# Use 'development' for local setup with enhanced logging & debug info
# Use 'production' for deployment with optimized settings
NODE_ENV=development

# ====== Deployment Options ======
# Uncomment and set these for production environments

# SSL Configuration for database (uncomment in production)
# DATABASE_SSL=true

# Maximum database pool connections
# DB_POOL_MAX=20

# ====== Advanced Settings ======
# Session timeout in milliseconds (24 hours default)
# SESSION_MAX_AGE=86400000

# Logging level (debug, info, warn, error)
# LOG_LEVEL=info